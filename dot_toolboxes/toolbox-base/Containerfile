ARG VERSION=42
FROM registry.fedoraproject.org/fedora-toolbox:${VERSION}

RUN dnf -y update && \
    dnf -y install direnv \
                    jq \
                    vim \
                    zsh \
                    fzf \
                    zoxide \
                    ranger \
                    yubikey-manager \
                    ruby-devel \
                    gron \
                    htop \
                    inotify-tools \
                    libxcrypt-compat
RUN dnf clean all
